<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.kpch.cheapmedicine.view_controller.BarCodeActivity"
    style="@style/cm1_layouts"
    android:keepScreenOn="true">
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_barcode_help"
        android:id="@+id/tv_barcode_help"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_scanned_barcode"
        android:layout_gravity="center"
        style="@style/s_barCode"
        android:gravity="center|top"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cameraPreview" />

    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_below="@+id/tv_barcode_help"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/cm1_border_barcode"
        android:padding="3dp">

        <ImageView
            android:id="@+id/bar_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

    </FrameLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_barcode_findDrug"
        android:layout_centerInParent="true"
        android:visibility="invisible" />


</RelativeLayout>