<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/cm1_textView</item>
    </style>


    <style name="cm1_textView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#444444</item>
    </style>

    <style name="cm1_layouts" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/material_grey_50</item>

    </style>

    <style name="s_MenuItems" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="cm_buttons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="s_add_analogNames" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="s_barCode" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#7CFF50</item>
    </style>

    <style name="mi_analogs" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0a7800</item>
    </style>

    <style name="s_chosen_drug" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textSize">14dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#d20000</item>
</style>

    <style name="s_filter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="EditText_cm" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/cm1_border_field</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListView_withoutDeviders" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:divider">#ffffff</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>

    </style>

    <style name="actionBar_title" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fafafa</item>
    </style>

</resources>
