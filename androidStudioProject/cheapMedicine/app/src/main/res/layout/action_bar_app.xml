<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:padding="0dp"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_weight="50"
        >

        <ImageView
            android:id="@+id/iv_docImage"
            android:layout_width="@dimen/abc_action_bar_default_height_material"

            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:clickable="true"
            android:contentDescription="@string/textAppName"
            android:onClick="onClickHomeButton"
            android:src="@drawable/doc_back" />

        <TextView
            android:id="@+id/tv_AppFullNameInActionBar"
            style="@style/actionBar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:gravity="center_vertical|left"
            android:text="@string/textAppFullName" />
    </TableRow>
</LinearLayout>